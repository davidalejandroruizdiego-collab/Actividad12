<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.BiometricAuth" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary_deep_navy</item>
        <item name="colorPrimaryVariant">@color/neutral_dark_slate_gray</item>
        <item name="colorOnPrimary">@color/contrast_off_white</item>

        <item name="colorSecondary">@color/secondary_dark_cyan</item>
        <item name="colorSecondaryVariant">@color/accent_electric_blue</item>
        <item name="colorOnSecondary">@color/contrast_off_white</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:colorBackground">@color/background_soft_light_gray</item>
        <item name="colorSurface">@color/background_soft_light_gray</item>

        <item name="android:textColorPrimary">@color/neutral_charcoal_black</item>

        <item name="android:fontFamily">@font/roboto_italic_variable</item>
    </style>

    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_italic_variable</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/accent_electric_blue</item>
    </style>

    <style name="TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/neutral_charcoal_black</item>
        <item name="android:fontFamily">@font/roboto_italic_variable</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="DescriptionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/neutral_dark_slate_gray</item>
        <item name="android:fontFamily">@font/roboto_italic_variable</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">32dp</item>
    </style>
</resources>